---
import { basePath } from "../utils";

interface Props extends astroHTML.JSX.AnchorHTMLAttributes {
  href: string;
  text: string;
}

const { href, text, class: styles } = Astro.props;
---

<a
  class:list={["text-red-900 hover:text-amber-700", styles]}
  href={`${basePath}${href}`}>{text}</a
>
